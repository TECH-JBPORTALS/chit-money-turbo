{
  "extends": "@cmt/typescript-config/base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    },
    "jsx": "preserve",
    "types": ["nativewind/types"],
    "checkJs": false,
    "moduleSuffixes": [".ios", ".android", ".native", ""],
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "*.js",
    "*.ts",
    "api/index.ts",
    "nativewind-env.d.ts",
    "src",
    "types/globals.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
