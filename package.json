{
  "name": "cmt",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo run clean",
    "db:push": "turbo -F @cmt/db push"
  },
  "devDependencies": {
    "@cmt/eslint-config": "workspace:*",
    "@cmt/typescript-config": "workspace:*",
    "prettier": "^3.5.1",
    "turbo": "^2.4.2",
    "typescript": "catalog:"
  },
  "packageManager": "pnpm@10.4.1",
  "engines": {
    "node": ">=20"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@clerk/shared",
      "core-js",
      "core-js-pure",
      "sharp"
    ],
    "ignoredBuiltDependencies": [
      "browser-tabs-lock"
    ]
  }
}
